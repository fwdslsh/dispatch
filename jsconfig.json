{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": false,
		"moduleResolution": "bundler",
		"maxNodeModuleJsDepth": 2,

		// Incrementally enabling strict mode flags for better type safety
		"alwaysStrict": true,
		"noImplicitThis": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true
	},
	"exclude": ["specs", ".claude", "docs"]
}
