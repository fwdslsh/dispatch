{
	"permissions": {
		"allow": [
			"Bash(find:*)",
			"Bash(git checkout:*)",
			"Bash(npm run test:unit:*)",
			"mcp__svelte-llm__list_sections",
			"mcp__svelte-llm__get_documentation",
			"Bash(npm test:*)",
			"Bash(git add:*)",
			"Bash(git commit:*)",
			"Bash(git push:*)",
			"Bash(git fetch:*)",
			"Bash(npm run build:*)",
			"Bash(npm run test:*)",
			"Bash(npm run check:*)",
			"Bash(curl:*)",
			"Bash(sqlite3:*)",
			"Bash(timeout 30 npm run build:*)"
		],
		"defaultMode": "bypassPermissions"
	},
	"model": "sonnet",
	"enableAllProjectMcpServers": true,
	"enabledMcpjsonServers": ["svelte-llm", "chrome-devtools"],
	"hooks": {
		"Notification": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "./.claude/scripts/send-msg.sh"
					}
				]
			}
		]
	}
}
